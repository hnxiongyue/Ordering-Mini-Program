/* Add your styles here */ 

.container {
  background: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部购物车留出空间 */
}

.search-bar {
  padding: 20rpx 30rpx;
  background: #6b4ee6;
  position: relative;
}

.search-bar input {
  background: rgba(255, 255, 255, 0.9);
  padding: 16rpx 60rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  left: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 分类导航样式优化 */
.categories {
  display: flex;
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  white-space: nowrap;
  overflow-x: auto;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

.category-item.active {
  color: #6b4ee6;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #6b4ee6;
  border-radius: 2rpx;
}

/* 菜品列表样式优化 */
.menu-list {
  padding: 20rpx;
}

/* 购物车栏样式优化 */
.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 24rpx 24rpx 0 0;
}

.cart-info {
  display: flex;
  align-items: center;
}

.cart-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.cart-count {
  font-size: 28rpx;
  color: #333;
}

.cart-price {
  color: #f60;
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 20rpx;
}

.order-btn {
  background: linear-gradient(135deg, #6b4ee6, #8b65f7);
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(107, 78, 230, 0.3);
}

.header {
  background-size: cover;
  background-position: center;
  padding: 40rpx 30rpx;
  color: #fff;
}

.restaurant-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 12rpx;
}

.vip {
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.member-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.qrcode {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.announcement {
  font-size: 26rpx;
  line-height: 1.5;
  opacity: 0.9;
  background: rgba(0, 0, 0, 0.1);
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
} 