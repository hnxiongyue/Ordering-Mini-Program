.menu-item {
  display: flex;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.food-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.food-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.food-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.food-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.food-price {
  font-size: 36rpx;
  color: #f60;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.food-rating {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.star {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.action-area {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.count-ctrl {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 4rpx;
}

.minus, .add-btn {
  width: 48rpx;
  height: 48rpx;
  background: #6b4ee6;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 2rpx 4rpx rgba(107, 78, 230, 0.2);
}

.minus {
  background: #fff;
  color: #6b4ee6;
  border: 2rpx solid #6b4ee6;
}

.count {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
} 